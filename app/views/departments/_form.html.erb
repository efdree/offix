  </div>

  <div>
    <%= form.label :description, style: "display: block", class: "label--department" %>
    <%= form.text_area :description, class: "input input--department", placeholder: "This is the best department yet..." %>
  </div>

  <div>
    <%= form.label :cover, style: "display: block", class: "label--department"%>
    <%= form.file_field :cover, class: "input" %>
  </div>

  <div>
    <%= form.submit class: "input buttom--department__create" %>
  </div>
  <%= link_to "Back", departments_path, class: "input buttom--department__back"%>
<% end %>
